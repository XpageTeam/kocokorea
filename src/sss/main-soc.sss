.main-soc

	&__title
		font-weight: 600
		font-size: em(20)
		text-align: center
		letter-spacing: 0.04em
		text-transform: uppercase
		margin-bottom: 40px

	&__list
		display: flex
		justify-content: center


	&__item
		display: flex
		flex-direction: column
		align-items: center

		&:not(:last-child)
			margin-right: 40px

		&-img
			display: block
			size: 80px
			border-radius: 50%	
			display: flex
			flex-direction: column	
			justify-content: center	
			align-items: center	
			border: 1px solid var(--main-color)

		&-text
			margin-top: 20px
				

@media (max-width: 1200px)
	
	.main-soc__title
		margin-bottom: 25px

@media (max-width: 1000px)
	
	.main-soc__item
		&-img
			width: 54px
			height: 54px

		&-text
			margin-top: 15px

	.main-soc__item:not(:last-child)
		margin-right: 20px